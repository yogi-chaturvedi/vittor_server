[
  {
    "id": "firstName",
    "label": "First name",
    "placeholder": "Enter first name",
    "type": "text",
    "validationType": "string",
    "min": 5,
    "max": 10,
    "required": true
  },
  {
    "id": "lastName",
    "label": "Last name",
    "placeholder": "Enter last name",
    "type": "text",
    "validationType": "string",
    "min": 5,
    "max": 10,
    "required": true
  },
  {
    "id": "email",
    "label": "Email",
    "placeholder": "Enter email",
    "type": "text",
    "validationType": "string",
    "required": true,
    "regex": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
  },
  {
    "id": "password",
    "label": "Password",
    "placeholder": "Enter password",
    "type": "password",
    "required": true,
    "min": 6
  },
  {
    "id": "country",
    "label": "Country",
    "placeholder": "Enter country",
    "type": "drop-down",
    "validationType": "string",
    "required": true,
    "apiUrl": "/country"
  },
  {
    "id": "state",
    "label": "State",
    "placeholder": "Enter state",
    "type": "drop-down",
    "derivedFrom": "country",
    "validationType": "string",
    "required": true,
    "apiUrl": "/state"
  },
  {
    "id": "city",
    "label": "City",
    "placeholder": "Enter city",
    "type": "drop-down",
    "derivedFrom": "state",
    "validationType": "string",
    "required": true,
    "apiUrl": "/city"
  }
]
